<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>PlanifyHub | Home</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex flex-col min-h-screen bg-gradient-to-br from-gray-900 via-black to-gray-800 text-white">

  <!-- Header -->
  <header class="w-full bg-black bg-opacity-60 backdrop-blur-md sticky top-0 z-50">
    <div class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">
      <h1 class="text-2xl font-bold tracking-wide">
        <span class="text-pink-500">Planify</span>Hub
      </h1>
      <nav class="hidden md:flex space-x-6">
        <a href="/" class="hover:text-pink-500 transition">Home</a>
        <a href="#events" class="hover:text-pink-500 transition">Events</a>
        <a href="#organize" class="hover:text-pink-500 transition">Organize Event</a>
        <a href="#contact" class="hover:text-pink-500 transition">Contact</a>
        <a href="/login" class="bg-pink-600 px-4 py-1 rounded-lg hover:bg-pink-700 transition">Login / Signup</a>
      </nav>
      <button id="menu-btn" class="md:hidden text-white text-2xl">&#9776;</button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobile-menu" class="hidden bg-black bg-opacity-90 md:hidden">
      <nav class="flex flex-col p-4 space-y-3">
        <a href="/" class="hover:text-pink-500">Home</a>
        <a href="#events" class="hover:text-pink-500">Events</a>
        <a href="#organize" class="hover:text-pink-500">Organize Event</a>
        <a href="#contact" class="hover:text-pink-500">Contact</a>
        <a href="/login" class="bg-pink-600 px-4 py-2 rounded-lg text-center hover:bg-pink-700">Login / Signup</a>
      </nav>
    </div>
  </header>

  <!-- Hero Section -->
  <section class="flex flex-col md:flex-row items-center justify-between max-w-7xl mx-auto px-4 py-16">
    <div class="text-center md:text-left mb-8 md:mb-0">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">
        Delightful events <span class="text-pink-500">start here.</span>
      </h1>
      <p class="text-gray-300 mb-6 max-w-lg">
        Set up an event page, invite friends, and manage your events effortlessly.
      </p>
      <a href="/backend/src/views/create-event.ejs" class="bg-pink-600 px-6 py-3 rounded-lg text-lg hover:bg-pink-700 transition">Get Started</a>
    </div>
    <img src="https://cdn-icons-png.flaticon.com/512/992/992700.png" alt="Event Image" class="w-72 mx-auto md:mx-0"/>
  </section>

  <!-- Organize Event Section -->
  <section id="organize" class="bg-gray-800 py-16 px-4">
    <div class="max-w-5xl mx-auto text-center">
      <h2 class="text-3xl font-semibold mb-4">Organize Your Event</h2>
      <p class="text-gray-300 mb-6">Host a memorable event â€” just one click away.</p>
      <a href="/create-event" class="bg-pink-600 px-6 py-3 rounded-lg text-lg hover:bg-pink-700 transition">Create Event</a>
    </div>
  </section>

  <!-- Footer -->
  <footer id="contact" class="bg-black py-6 mt-auto">
    <div class="max-w-7xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center">
      <p class="text-gray-400">&copy; 2025 PlanifyHub. All rights reserved.</p>
      <div class="flex space-x-4 mt-3 md:mt-0">
        <a href="#" class="hover:text-pink-500">Facebook</a>
        <a href="#" class="hover:text-pink-500">Twitter</a>
        <a href="#" class="hover:text-pink-500">Instagram</a>
      </div>
    </div>
  </footer>

  <!-- Mobile Menu Script -->
  <script>
    const menuBtn = document.getElementById('menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    menuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  </script>
</body>
</html>
